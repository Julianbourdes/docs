{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Teamova",
  "colors": {
    "primary": "#2563eb",
    "light": "#2563eb",
    "dark": "#3b83f6"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "languages": [
      {
        "language": "en",
        "global": {
          "anchors": [
            {
              "anchor": "Website",
              "icon": "house",
              "href": "https://teamova.net"
            },
            {
              "anchor": "Status Page",
              "icon": "circle-info",
              "href": "https://status.teamova.net/en"
            },
            {
              "anchor": "Support",
              "icon": "life-ring",
              "href": "mailto:contact@teamova.net"
            }
          ]
        },
        "tabs": [
          {
            "tab": "Documentation",
            "groups": [
              {
                "group": "Getting Started",
                "pages": ["en/introduction", "en/features"]
              },
              {
                "group": "What's New",
                "pages": ["en/changelog"]
              }
            ]
          }
        ]
      },
      {
        "language": "fr",
        "global": {
          "anchors": [
            {
              "anchor": "Site web",
              "icon": "house",
              "href": "https://teamova.net"
            },
            {
              "anchor": "Page de statut",
              "icon": "circle-info",
              "href": "https://status.teamova.net/fr"
            },
            {
              "anchor": "Support",
              "icon": "life-ring",
              "href": "mailto:contact@teamova.net"
            }
          ]
        },
        "tabs": [
          {
            "tab": "Documentation",
            "groups": [
              {
                "group": "Commencer",
                "pages": ["fr/introduction", "fr/features"]
              },
              {
                "group": "Quoi de Neuf",
                "pages": ["fr/changelog"]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/teamova-light.svg",
    "dark": "/logo/teamova-dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "App Teamova",
      "href": "https://app.teamova.net"
    }
  },
  "footer": {
    "socials": {
      "website": "https://teamova.net"
    }
  },
  "appearance": {
    "default": "system"
  },
  "fonts": {
    "family": "Inter"
  }
}
